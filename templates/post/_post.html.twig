<div class="border-b-2 border-neutral-800 ubuntu-sans-medium">
    <div class="p-4">
        <div class="flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <a href="/profile/{{ post.author.username }}" draggable="false">
                    {% if post.author.profilePictureLink %}
                        <img src="/img/uploads/pfp{{ asset(post.author.profilePictureLink) }}" class="w-12 h-12 rounded-full" draggable="false">
                    {% else %}
                        <img src="/img/uploads/pfp/default.gif" class="w-12 h-12 rounded-full" draggable="false">
                    {% endif %}
                </a>
                <a href="/profile/{{ post.author.username }}" draggable="false">
                    <p class="text-white ubuntu-sans-bold no-underline">{{ post.author.username }}</p>
                </a>
            </div>

            <div class="text-gray-400 text-sm">
                {% set now = "now" | date("Y-m-d") %}
                {% set yesterday = "now" | date_modify("-1 day") | date("Y-m-d") %}
                {% set postDate = post.createdAt | date("Y-m-d") %}
                {% set postYear = post.createdAt | date("Y") %}
                {% set currentYear = "now" | date("Y") %}
                {% if now == postDate %}
                    Aujourd'hui à {{ post.createdAt | date('H:i') }}
                {% elseif yesterday == postDate %}
                    Hier à {{ post.createdAt | date('H:i') }}
                {% else %}
                    {% if postYear != currentYear %}
                        {{ post.createdAt | format_datetime(locale='fr', pattern='d MMMM yyyy') }}
                    {% else %}
                        {{ post.createdAt | format_datetime(locale='fr', pattern='d MMMM') }}
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>

    <div class="min-h-15 p-4 pt-2 pb-6">
        <div class="text-gray-100 break-words">
            {{ post.content }}
        </div>
    </div>

    <div class="min-h-15 p-4 pt-2">
        <div class="flex align-center text-gray-100 break-words">
            {# BatCom #}
            <svg viewBox="0 0 640 512" height="20px" width="20px" class="text-white">
                <path fill="currentColor" d="M208 352c114.9 0 208-78.8 208-176S322.9 0 208 0S0 78.8 0 176c0 38.6 14.7 74.3 39.6 103.4c-3.5 9.4-8.7 17.7-14.2 24.7c-4.8 6.2-9.7 11-13.3 14.3c-1.8 1.6-3.3 2.9-4.3 3.7c-.5 .4-.9 .7-1.1 .8l-.2 .2s0 0 0 0s0 0 0 0C1 327.2-1.4 334.4 .8 340.9S9.1 352 16 352c21.8 0 43.8-5.6 62.1-12.5c9.2-3.5 17.8-7.4 25.2-11.4C134.1 343.3 169.8 352 208 352zM448 176c0 112.3-99.1 196.9-216.5 207C255.8 457.4 336.4 512 432 512c38.2 0 73.9-8.7 104.7-23.9c7.5 4 16 7.9 25.2 11.4c18.3 6.9 40.3 12.5 62.1 12.5c6.9 0 13.1-4.5 15.2-11.1c2.1-6.6-.2-13.8-5.8-17.9c0 0 0 0 0 0s0 0 0 0l-.2-.2c-.2-.2-.6-.4-1.1-.8c-1-.8-2.5-2-4.3-3.7c-3.6-3.3-8.5-8.1-13.3-14.3c-5.5-7-10.7-15.4-14.2-24.7c24.9-29 39.6-64.7 39.6-103.4c0-92.8-84.9-168.9-192.6-175.5c.4 5.1 .6 10.3 .6 15.5z"/>
            </svg>
            <span class="ml-1">{{ post.comments|length }}</span>


            {# BatLike #}
            <div id="like-{{post.id}}" class="flex align-center ml-5 text-gray-100 break-words">
                {% if post.likedBy.contains(app.user) %}
                    <svg onclick="toggleLikePost({{post.id}})" viewBox="0 0 512 512" height="20px" width="20px" data-liked="true" class="likeSvg text-blue-500 transition-colors duration-300 cursor-pointer">
                        <path fill="currentColor" d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z"></path>
                    </svg>
                {% else %}
                    <svg onclick="toggleLikePost({{post.id}})" viewBox="0 0 512 512" height="20px" width="20px" data-liked="false" class="likeSvg text-white transition-colors duration-300 hover:text-blue-500 cursor-pointer">
                        <path fill="currentColor" d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z"/>
                    </svg>
                {% endif %}
                <span class="likeCount ml-1">{{ post.getLikedBy|length }}</span>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script src="{{ asset('js/post.js') }}"></script>
{% endblock %}