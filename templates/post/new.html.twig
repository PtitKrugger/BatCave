{% extends 'base.html.twig' %}

{% block title %}Nouveau post{% endblock %}

{% block body %}

{% include 'header.html.twig' %}    
<div class="flex justify-center min-h-[calc(100vh-4rem)] text-white ubuntu-sans-medium" style="background: linear-gradient(to right, rgba(32, 32, 32, 1) 0%, rgba(5, 5, 5, 1) 35%, rgba(5, 5, 5, 1) 65%, rgba(32, 32, 32, 1) 100%);">
    <div class="h-1/3 w-1/3 p-8 mt-8 bg-[#1a1a1a] rounded-2xl shadow-lg border border-neutral-800">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <h2 class="text-2xl font-semibold text-center text-white ubuntu-medium-plus">Cr√©er un nouveau post</h2>

        <div class="flex flex-col">
            {{ form_widget(form.content, {'attr': {'placeholder': 'Blabla...', 'class': 'w-full h-52 p-3 bg-[#282828] border border-gray-600 rounded-md text-white ubuntu-sans-medium placeholder:text-gray-400 placeholder:text-sm focus:outline-none focus:border-white'}}) }}
        </div>

        <div class="flex justify-center">
            <button type="submit" class="flex items-center gap-3 px-8 py-3 font-semibold text-white duration-200 border border-gray-600 rounded-full bg-[#282828] hover:scale-110 hover:border-white">
                Poster
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}